{
  "name": "lit-q",
  "version": "0.3.0",
  "description": "A simple async query/mutation library for Lit/LitElement inspired by react-query",
  "keywords": [
    "lit",
    "lit-html",
    "lit-element",
    "query",
    "fetch",
    "promise",
    "mutation",
    "react-query"
  ],
  "homepage": "https://github.com/explodingcamera/esm/tree/main/packages/lit-q",
  "repository": "https://github.com/explodingcamera/esm",
  "license": "ISC",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/lit-q.cjs",
      "import": "./dist/lit-q.js"
    }
  },
  "main": "dist/lit-q.cjs",
  "module": "dist/lit-q.js",
  "types": "types/index.d.ts",
  "files": [
