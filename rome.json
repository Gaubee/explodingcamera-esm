{
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "lineWidth": 120
  },
  "files": {
    "ignore": ["node_modules/", "dist/"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useBlockStatements": "off",
        "useSingleVarDeclarator": "off",
        "noUnusedTemplateLiteral": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  }
}
